@page "/"
@using Concierge.Shared
@inject HttpClient Http

<PageTitle>Hotel Concierge</PageTitle>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h2>Welcome to Our Hotel</h2>
        <p class="text-muted">How can we help you today?</p>
    </div>

    <EditForm Model="@request" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        <div class="mb-3">
            <label class="form-label">Room Number</label>
            <InputText @bind-Value="request.RoomNumber" class="form-control" placeholder="e.g. 101" />
        </div>

        <div class="mb-3">
            <label class="form-label">What do you need?</label>
            <InputSelect @bind-Value="request.RequestType" class="form-control">
                <option value="">Select an option...</option>
                <option value="Towels">Fresh Towels</option>
                <option value="Toiletries">Toiletries (Soap/Shampoo)</option>
                <option value="Pillows">Extra Pillows</option>
                <option value="Maintenance">Maintenance Issue</option>
                <option value="Other">Other (Please specify in notes)</option>
            </InputSelect>
        </div>

        <div class="mb-3">
            <label class="form-label">Additional Notes</label>
            <InputTextArea @bind-Value="request.Notes" class="form-control" rows="3" placeholder="Any specific details?" />
        </div>

        <button type="submit" class="btn btn-primary w-100 py-3" disabled="@isSubmitting">
            @if (isSubmitting)
            {
                <span>Sending...</span>
            } else
            {
                <span>Submit Request</span>
            }
        </button>
    </EditForm>

    @if (showSuccess)
    {
        <div class="alert alert-success mt-3 shadow-sm" role="alert">
            <strong>Success!</strong> Your request has been sent to the front desk.
        </div>
    }
</div>

@using Microsoft.AspNetCore.SignalR.Client
@implements IAsyncDisposable
@code {
    private ServiceRequest request = new();
    private bool isSubmitting = false;
    private bool showSuccess = false;
    private HubConnection? hubConnection;

    protected override async Task OnInitializedAsync()
    {
        // 1. Initialize the connection to your Backend API
        // Make sure this port matches your Backend's launchSettings.json!
        hubConnection = new HubConnectionBuilder()
            .WithUrl("http://localhost:7095/requestHub")
            .WithAutomaticReconnect()
            .Build();

        await hubConnection.StartAsync();
    }

    private async Task HandleSubmit()
    {
        if (hubConnection is not null)
        {
            isSubmitting = true;

            // 2. Set the timestamp before sending
            request.CreatedAt = DateTime.Now;

            // 3. Call the "SendRequest" method on the Backend Hub
            await hubConnection.SendAsync("SendRequest", request);

            showSuccess = true;
            isSubmitting = false;

            // Reset the form
            request = new ServiceRequest();

            // Hide success message after 5 seconds
            StateHasChanged();
            await Task.Delay(5000);
            showSuccess = false;
            StateHasChanged();
        }
    }

    // Best practice: Close the connection when the guest leaves the page
    public async ValueTask DisposeAsync()
    {
        if (hubConnection is not null)
        {
            await hubConnection.DisposeAsync();
        }
    }
}
}